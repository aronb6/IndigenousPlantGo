<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bcit.indigenousplantgo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_indigenoushand"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_indigenoushand"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bcit.indigenousplantgo.MapActivity"></activity>
        <activity android:name="com.bcit.indigenousplantgo.Waypoints2Activity" />
        <activity android:name="com.bcit.indigenousplantgo.DetailActivity" />
        <activity android:name="com.bcit.indigenousplantgo.PlantsActivity" />
        <activity android:name="com.bcit.indigenousplantgo.ToponymActivity" />
        <activity android:name="com.bcit.indigenousplantgo.QRCodeActivity" />
        <activity android:name="com.bcit.indigenousplantgo.WaypointsActivity" />
        <activity android:name="com.bcit.indigenousplantgo.HousepostActivity" />
        <activity android:name="com.bcit.indigenousplantgo.IntroActivity2" />
        <activity android:name="com.bcit.indigenousplantgo.MainActivity" />
        <activity android:name="com.bcit.indigenousplantgo.IntroActivity1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="INSERT_API_KEY_HERE" />
    </application>

</manifest>
